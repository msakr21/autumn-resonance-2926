<h1> Recipe: <%= @recipe.name %> </h1>
<p> <%= @recipe.complexity %> </p>
<p> <%= @recipe.genre %> </p>
<h3> Recipe Ingrdients: </h3>
<% @recipe_ingredients.each do |ingredient| %>
  <p> <%= ingredient.name %> </p>
<% end %>
<h3> Total Cost: </h3>
<p> <%= @total_cost %> </p>

<%= form_with url: "/recipes/#{@recipe.id}", method: :patch, local: true do |f| %>
  <%= f.label :ingredient_id %>
  <%= f.number_field :ingredient_id %>
  <%= f.submit value: "Submit"%>
<% end %>